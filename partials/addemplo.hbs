<div
  class="w-screen height-auto flex flex-col justify-center align-item-center bg-grey-200"
>
  <h2
    class="w-screen text-center font-medium leading-tight text-4xl mt-0 mb-2 text-black-600"
  >
    Add Employee
  </h2>
  <form
    class="w-screen flex flex-col place-items-center pl-10"
    method="post"
    action="/admin/add"
  >
    <div
      class="md:flex md:items-center relative mb-6 place-content-evenly w-1/2"
    >
      <div class="md:w-1/3">
        <label for="Name" class="font-bold text-lg">Name</label>
      </div>
      <div class="md:w-2/3">
        <input
          id="Name"
          name="Name"
          type="text"
          autocomplete="Name"
          required
          class="relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm"
          placeholder="Name"
        />
      </div>
    </div>
    <div
      class="md:flex md:items-center relative mb-6 place-content-evenly w-1/2"
    >
      <div class="md:w-1/3">
        <label for="Email" class="font-bold text-lg">Email</label>
      </div>
      <div class="md:w-2/3">
        <input
          id="Email"
          name="Email"
          type="email"
          autocomplete="email"
          required
          class="relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm"
          placeholder="Email"
        />
      </div>
    </div>
    <div
      class="md:flex md:items-center relative mb-6 place-content-evenly w-1/2"
    >
      <div class="md:w-1/3">
        <label for="Phone" class="font-bold text-lg">Phone</label>
      </div>
      <div class="md:w-2/3">

        <input
          id="Phone"
          name="Phone"
          type="tel"
          autocomplete="Phone"
          required
          class="relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm"
          placeholder="Phone"
        />
      </div>
    </div>
    <div
      class="md:flex md:items-center relative mb-6 place-content-evenly w-1/2"
    >
      <div class="md:w-1/3">
        <label for="Department" class="font-bold text-lg">Department</label>
      </div>
      <div class="md:w-2/3">

        <input
          id="Department"
          name="Department"
          type="text"
          autocomplete="Department"
          required
          class="relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm"
          placeholder="Department"
        />
      </div>
    </div>
    <div
      class="md:flex md:items-center relative mb-6 place-content-evenly w-1/2"
    >
      <div class="md:w-1/3">
        <label for="Joining_date" class="font-bold text-lg">Joining date</label>
      </div>
      <div class="md:w-2/3">

        <input
          id="joining_date"
          name="Joining_date"
          type="date"
          autocomplete="joining_date"
          required
          class="relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm"
        />
      </div>
    </div>
    <div
      class="md:flex md:items-center relative mb-6 place-content-evenly w-1/2"
    >
      <div class="md:w-1/3">
        <label for="Password" class="font-bold text-lg">Password</label>
      </div>
      <div class="md:w-2/3">

        <input
          id="Password"
          name="Password"
          type="password"
          autocomplete="email"
          required
          class="relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm"
          placeholder="Password"
        />
      </div>
    </div>
    <div class="md:flex md:items-center">
      <div class="md:w-full bg-gray-700"></div>
      <div class="md:w-full">
        <input 
          class="w-full shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded"
          type="submit"
        >
          Add Employee
        </input>
      </div>
    </div>
  </form>
</div>