<div class="w-screen height-auto flex justify-center align-item-center">
    <div class="align-middle content-evenly w-2/3" style="padding: 5px, text-align: center, border: none, cursor: pointer">
        <h2 class="font-medium leading-tight text-center text-4xl mt-0 mb-2 text-black-600">
          Add Task
        </h2>
        <form class="w-full pl-3 pr-5">
          <div class="md:flex md:items-center mb-6">
            <div class="md:w-1/3">
            <label for="Task description" class="text-xl antialiased text-gray-900 font-bold">Task Description</label>
            </div>
            <div class="md:w-2/3">
              <textarea class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="inline-full-name" type="text" placeholder="Enter your task detail"></textarea>
            </div>
          </div>
          <div class="md:flex md:items-center mb-6">
            <div class="md:w-1/3">
            <label for="Task type" class="text-xl antialiased text-gray-900 font-bold">Task type</label>
            </div>
            <div class="md:w-2/3">
              <select style="padding: 5px, text-align: center, border: none, cursor: pointer" class="w-full py-2 px-4 bg-gray-200">
                <option value="Break">Break</option>
                <option value="Meeting">Meeting</option>
                <option value="Work">Work</option>
              </select>
            </div>
          </div>
          <div class="md:flex md:items-center mb-6">
            <div class="md:w-1/3">
            <label for="Start Time" class="text-xl antialiased text-gray-900 font-bold">Start Time</label>
            </div>
            <div class="md:w-2/3">
              <input class="w-full py-2 px-4 text-center bg-gray-200 "  style="padding: 5px, text-align: center, border: none, cursor: pointer"  type="time"  min="09:00"  max="18:00"  required/>
              <div>
                <small>Office hours are 9am to 6pm</small>
              </div>
            </div>
          </div>
          <div class="md:flex md:items-center mb-6">
            <div class="md:w-1/3">
            <label for="Time Taken to Complete the task" class="text-xl antialiased text-gray-900 font-bold">Time Taken to Complete the task</label>
            </div>
            <div class="md:w-2/3">
              <input  class="bg-gray-200 w-full py-2 px-4 text-center"  type="number"  style="padding: 5px, text-align: center, border: none, cursor: pointer"/>
              <div>
                <small>(in Minutes)</small>
              </div>
            </div>
          </div>

          <div class="md:flex md:items-center">
            <div class="md:w-1/3"></div>
            <div class="md:w-2/3">
              <button  class="shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded"  type="button">
                Create
              </button>
            </div>
          </div>
        </form>
      </div>
</div>